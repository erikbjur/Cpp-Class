{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Functions - Build For Mac",
			"command": "clang++",
			"args": [
				"-g",
				"${workspaceFolder}/functions.cpp",
				"-o",
				"${workspaceFolder}/functions.exe"
			],
			"group": "build",
		},
		{
			"type": "process",
			"label": "Functions - Build For Windows",
			"command": "clang++",
			"args": [
				"-g",
				"${workspaceFolder}\\functions.cpp",
				"-o",
				"${workspaceFolder}\\functions.exe"
			],
			"group": "build",
		}
	]
}
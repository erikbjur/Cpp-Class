{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build Example 1 for Mac",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++20", // This flag tells the compiler we're using c++ 20
				//"-g",
				"${workspaceFolder}/Example_1.cpp",
				"-o",
				"${workspaceFolder}/myApp.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
